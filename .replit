modules = ["nodejs-20", "postgresql-16"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "API Server"

[[workflows.workflow]]
name = "API Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd backend/api && npm run start:dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 38767
externalPort = 3000

[[ports]]
localPort = 41757
externalPort = 3001

[deployment]
deploymentTarget = "autoscale"
run = ["bash", "-c", "cd backend/api && npm start"]
build = ["bash", "-c", "cd backend/api && npm install && npm run build"]
